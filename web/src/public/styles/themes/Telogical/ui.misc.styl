
/* Misc visuals
----------------------------------*/

/* Corner radius */
.ui-corner-all,
.ui-corner-top,
.ui-corner-left,
.ui-corner-tl {
	border-top-left-radius: $themeBorderRadius;
}
.ui-corner-all,
.ui-corner-top,
.ui-corner-right,
.ui-corner-tr {
	border-top-right-radius: $themeBorderRadius;
}
.ui-corner-all,
.ui-corner-bottom,
.ui-corner-left,
.ui-corner-bl {
	border-bottom-left-radius: $themeBorderRadius;
}
.ui-corner-all,
.ui-corner-bottom,
.ui-corner-right,
.ui-corner-br {
	border-bottom-right-radius: $themeBorderRadius;
}

/* Overlays */
.ui-widget-overlay {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #000;
	opacity: .4;
	-ms-filter: Alpha(Opacity=40);
      zoom: 1;
}
.ui-widget-shadow {
	margin: -7px 0 0 -7px;
	padding: 7px;
	background: linear-gradient(top, rgba(181,189,200,0.3) 0%, rgba(130,140,149,1) 36%, rgba(40,52,59,0.3) 100%);
	opacity: .3;
	filter: Alpha(Opacity=30);
	border-radius: 8px;
}

.ui-imagefix-label {
    display:block;
    margin-top:15%; 
}

