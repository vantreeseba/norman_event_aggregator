/* Interaction Cues
----------------------------------*/
.ui-state-disabled {
	cursor: default !important;
}

.ui-state-highlight,
.ui-widget-content .ui-state-highlight,
.ui-widget-header .ui-state-highlight {
	border: 1px solid #EDD100;
	background: #F2FA5A;
	color: #363636;
}



.ui-state-highlight a,
.ui-widget-content .ui-state-highlight a,
.ui-widget-header .ui-state-highlight a {
	color: #363636;
}
.ui-state-error,
.ui-widget-content .ui-state-error,
.ui-widget-header .ui-state-error {
	border: 1px solid #cd0a0a;
	background: linear-gradient(top, #ff3019 0%, #cf0404 100%);
	color: #ffffff;
}
.ui-state-error a,
.ui-widget-content .ui-state-error a,
.ui-widget-header .ui-state-error a {
	color: #ffffff;
}
.ui-state-error-text,
.ui-widget-content .ui-state-error-text,
.ui-widget-header .ui-state-error-text {
	color: #ffffff;
}
.ui-priority-primary,
.ui-widget-content .ui-priority-primary,
.ui-widget-header .ui-priority-primary {
	font-weight: bold;
}
.ui-priority-secondary,
.ui-widget-content .ui-priority-secondary,
.ui-widget-header .ui-priority-secondary {
	opacity: .7;
	filter:Alpha(Opacity=70);
	font-weight: normal;
      font-size: 12px;
      font-style: italic;
}

.ui-state-disabled,
.ui-widget-content .ui-state-disabled,
.ui-widget-header .ui-state-disabled {
	opacity: .35;
	filter:Alpha(Opacity=35);
	background-image: none;
}
.ui-state-disabled .ui-icon {
	filter:Alpha(Opacity=35); /* For IE8 - See #6059 */
}

/* Interaction states
----------------------------------*/
.ui-state-default,
.ui-widget-content .ui-state-default,
.ui-widget-header .ui-state-default {
	border: 1px solid #bbb;
	background:  #f6f6f6;
	font-weight: normal;
	color: #333;
}
.ui-state-default a,
.ui-state-default a:link,
.ui-state-default a:visited {
	color: #2779aa;
	text-decoration: none;
}

.ui-state-hover,
.ui-widget-content .ui-state-hover,
.ui-widget-header .ui-state-hover {
     border: 1px solid lighten($themeHeaderColor, 15%);
     font-weight: normal;
     outline: none;
     background: lighten($themeHeaderColor, 25%);
     color: darken($widgetHeadFontColor, 5%);   
}

.ui-state-focus,
.ui-widget-content .ui-state-focus,
.ui-widget-header .ui-state-focus {  
    border: 1px solid lighten($themeHeaderColor, 5%);
    font-weight: normal;
    outline: none;
    background: lighten($themeHeaderColor, 10%);
    color: darken($widgetHeadFontColor, 5%);
    transition: box-shadow 750ms ease, color 500ms ease, background 500ms ease;
    box-shadow: inset 0 2px 2px rgba(0,0,0,0.075),0 0 5px rgba(81,167,232,0.5);   
}

.ui-state-hover a,
.ui-state-hover a:hover,
.ui-state-hover a:link,
.ui-state-hover a:visited {
	color: $stateHoverFontColor;
	text-decoration: none;
}
.ui-state-active,
.ui-widget-content .ui-state-active,
.ui-widget-header .ui-state-active {
	border: 1px solid #000;
	background: #00549f;
	font-weight: normal;
      box-shadow: $focusInsetShadow;
	color: $stateActiveFontColor;
    
}
.ui-state-active a,
.ui-state-active a:link,
.ui-state-active a:visited {
	color: #ffffff;
	text-decoration: none;
}

.ui-state-default.ui-icon {
    border: none;
    background: none;
}

.ui-state-advantage,
.ui-state-advantage td,
.ui-state-advantage .ui-icon,
.ui-state-advantage.ui-icon{
    color: #00AA00;
}

.ui-priority-foreground{
    font-size:125%;
}

.ui-priority-background{
    font-size:90%;
}



