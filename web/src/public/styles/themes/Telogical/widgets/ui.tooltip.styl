.ui-tooltip {
	padding: 8px;
	position: absolute;
	z-index: 9999;
	max-width: 300px;
	box-shadow: 0 0 5px $floatingelementShadowColor;
}

.ui-tooltip:focus {
    	box-shadow: 0 0 5px $floatingelementShadowColorFocus;
}

body .ui-tooltip {
	border-width: 3px;
}
